{
    "hooks": {
        "PreToolUse": [
            {
                "matcher": "Edit|Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/run-node.cmd\" \"${CLAUDE_PLUGIN_ROOT}/dist/src/cli/index.js\" verify-tdd"
                    }
                ]
            }
        ],
        "SessionStart": [
            {
                "matcher": "startup|resume|clear|compact",
                "hooks": [
                    {
                        "type": "command",
                        "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/run-node.cmd\" \"${CLAUDE_PLUGIN_ROOT}/dist/src/hooks/session-start.js\""
                    }
                ]
            }
        ],
        "UserPromptSubmit": [
            {
                "matcher": ".*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/run-node.cmd\" \"${CLAUDE_PLUGIN_ROOT}/dist/src/hooks/user-prompt-handler.js\""
                    }
                ]
            }
        ]
    }
}