{
  "name": "superpowers-fusion",
  "version": "0.1.0",
  "description": "Unified Claude Code plugin fusing Superpowers, TDD-Guard, OpenSpec, Conductor, and CodexMCP",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "superpowers-fusion": "./dist/src/cli/index.js"
  },
  "scripts": {
    "build": "tsc && npm run build:tdd-guard",
    "build:tdd-guard": "tsc -p tdd-guard/tsconfig.build.json",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .ts .",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "claude-code",
    "ai-development",
    "tdd",
    "skills",
    "openspec",
    "codex"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.8",
    "@anthropic-ai/sdk": "^0.65.0",
    "@babel/parser": "^7.24.0",
    "@babel/traverse": "^7.24.0",
    "@babel/types": "^7.24.0",
    "@ltd/j-toml": "^1.38.0",
    "dotenv": "^17.2.3",
    "glob": "^10.3.10",
    "minimatch": "^10.1.1",
    "oh-my-opencode": "^2.14.0",
    "uuid": "^13.0.0",
    "yaml": "^2.4.1",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.5",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.12.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0"
  }
}
